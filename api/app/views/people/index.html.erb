<p id="notice"><%= notice %></p>

<h1>Listing People</h1>
<%= will_paginate @people %>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Birthdate</th>
      <th>Email</th>
      <th>Address</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><img src="<%= person.image %>" alt="" style="max-height: 40px"></td>
        <td><%= person.name %></td>
        <td><%= person.birthdate.strftime("%Y/%m/%d") %></td>
        <td><%= person.email %></td>
        <td><%= person.address %></td>
        <td><%= person.status %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

